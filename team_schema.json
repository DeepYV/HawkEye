{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Solution Architecture Team Structure",
  "description": "Schema for representing a solution architecture team hierarchy",
  "type": "object",
  "required": ["solutionArchitect"],
  "properties": {
    "solutionArchitect": {
      "type": "object",
      "required": ["name", "role", "yearsExperience", "productManagers"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the Solution Architect"
        },
        "role": {
          "type": "string",
          "enum": ["Solution Architect"],
          "description": "Role of the person"
        },
        "yearsExperience": {
          "type": "integer",
          "minimum": 0,
          "description": "Years of experience"
        },
        "productManagers": {
          "type": "array",
          "description": "List of Product Managers reporting to the Solution Architect",
          "items": {
            "type": "object",
            "required": ["name", "role", "engineers"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the Product Manager"
              },
              "role": {
                "type": "string",
                "enum": ["Product Manager"],
                "description": "Role of the person"
              },
              "engineers": {
                "type": "array",
                "description": "List of Engineers reporting to the Product Manager",
                "minItems": 0,
                "maxItems": 3,
                "items": {
                  "type": "object",
                  "required": ["name", "role", "yearsExperience"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Name of the Engineer"
                    },
                    "role": {
                      "type": "string",
                      "enum": ["Engineer"],
                      "description": "Role of the person"
                    },
                    "yearsExperience": {
                      "type": "integer",
                      "minimum": 0,
                      "description": "Years of experience"
                    }
                  }
                }
              }
            }
          }
        },
        "principalEngineer": {
          "type": "object",
          "description": "Principal Engineer reporting to the Solution Architect",
          "required": ["name", "role", "yearsExperience"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the Principal Engineer"
            },
            "role": {
              "type": "string",
              "enum": ["Principal Engineer"],
              "description": "Role of the person"
            },
            "yearsExperience": {
              "type": "integer",
              "minimum": 0,
              "description": "Years of experience"
            }
          }
        },
        "qa": {
          "type": "object",
          "description": "QA Engineer reporting to the Solution Architect",
          "required": ["name", "role", "yearsExperience"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the QA Engineer"
            },
            "role": {
              "type": "string",
              "enum": ["QA Engineer"],
              "description": "Role of the person"
            },
            "yearsExperience": {
              "type": "integer",
              "minimum": 0,
              "description": "Years of experience"
            }
          }
        }
      }
    }
  }
}